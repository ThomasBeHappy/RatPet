<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="RatPet.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RatPet"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        AllowDrop="True"
        Title="Overlay"
        Width="200" Height="200">
  <Canvas x:Name="WorldCanvas" RenderOptions.BitmapScalingMode="NearestNeighbor">
    <!-- Footprints should be under the rat; overlay sits behind rat window, so this layer remains beneath. -->
    <local:VisualHost x:Name="FootprintLayer" IsHitTestVisible="False"/>
    <Image x:Name="ToyImage"
           Stretch="None"
           RenderOptions.BitmapScalingMode="NearestNeighbor"
           RenderTransformOrigin="0.5,0.5"
           MouseLeftButtonDown="ToyImage_MouseLeftButtonDown"
           MouseMove="ToyImage_MouseMove"
           MouseLeftButtonUp="ToyImage_MouseLeftButtonUp"
           Visibility="Collapsed"/>
    <Image x:Name="MemeImage"
           Stretch="Uniform"
           RenderOptions.BitmapScalingMode="NearestNeighbor"
           Visibility="Collapsed"/>
  </Canvas>
</Window>


